<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btAmusement_park"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/amusement" />

        <TextView
            android:id="@+id/tvAmusemnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btAmusement_park"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Amusement Park" />

        <TextView
            android:id="@+id/tvAquarium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btAquarium"
            android:layout_marginLeft="160dp"
            android:textStyle="bold"
            android:text="Aquarium" />

        <TextView
            android:id="@+id/tvArtGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btArt_gallery"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Art Gallery" />

        <TextView
            android:id="@+id/tvCampGround"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btCampground"
            android:layout_marginLeft="160dp"
            android:textStyle="bold"
            android:text="Campground" />

        <TextView
            android:id="@+id/tvCasino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btCasino"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Casino" />

        <TextView
            android:id="@+id/tvMuseum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btMuseum"
            android:layout_marginLeft="160dp"
            android:textStyle="bold"
            android:text="Museum" />

        <Button
            android:id="@+id/btArt_gallery"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btAmusement_park"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/artgallery" />

        <Button
            android:id="@+id/btCampground"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/btArt_gallery"
            android:layout_alignLeft="@+id/btAquarium"
            android:background="@drawable/campground" />

        <Button
            android:id="@+id/btCasino"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btArt_gallery"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/casino" />

        <Button
            android:id="@+id/btMuseum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btCasino"
            android:layout_alignLeft="@+id/btCampground"
            android:layout_below="@+id/btCampground"
            android:layout_marginTop="25dp"
            android:background="@drawable/museum" />

        <Button
            android:id="@+id/btAquarium"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/btAmusement_park"
            android:background="@drawable/aquarium" />
    </RelativeLayout>

</ScrollView>